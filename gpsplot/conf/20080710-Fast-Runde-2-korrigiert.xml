<config>

  <general>
    <title>Fast-Runde Nr. 2</title>
    <url>http://knallwade.de/</url>
    <author>
      <name>Oliver Lau</name>
      <email>oliver@knallwade.de</email>
      <url>http://knallwade.de/</url>
    </author>
  </general>

  <input>
    <elevation>
      <file>../../../knallwade.de/data/gps/20080710-Fast-Runde-2-korrigiert.gpx</file>
      <offset>+00:00:00</offset>
    </elevation>
    <heartrate>
      <file>../../../knallwade.de/data/gps/20080710-Fast-Runde-2.sdf</file>
      <offset>+00:00:00</offset>
    </heartrate>
  </input>

  <calculations>
    <smoothing id="Original">
      <draw>yes</draw>
      <gnuplotOption>with lines lc rgb "#E77171"</gnuplotOption>
    </smoothing>

    <smoothing id="Threshold (3m)">
      <param>3</param>
      <algorithm>threshold</algorithm>
      <draw>no</draw>
      <gnuplotOption>with lines</gnuplotOption>
    </smoothing>

    <smoothing id="Douglas-Peucker (3m)">
      <param>3</param>
      <algorithm>douglas_peucker</algorithm>
      <draw>yes</draw>
      <gnuplotOption>with points pt 5 ps 0.3</gnuplotOption>
    </smoothing>

    <smoothing id="Douglas-Peucker (5m)">
      <param>5</param>
      <algorithm>douglas_peucker</algorithm>
      <draw>no</draw>
      <gnuplotOption>with points pt 5 ps 0.3</gnuplotOption>
    </smoothing>

    <smoothing id="Douglas-Peucker (8m)">
      <param>8</param>
      <algorithm>douglas_peucker</algorithm>
      <draw>no</draw>
      <gnuplotOption>with points pt 5 ps 0.3</gnuplotOption>
    </smoothing>
  </calculations>

  <gnuplot>
    <executable>I:\Programme\gnuplot\bin\wgnuplot.exe</executable>
    <!-- --><executable>gnuplot</executable> -->
    <format>png small size 800,600 enhanced interlace</format>
    <suffix>png</suffix>
    <xaxis>distance</xaxis>
      <!-- distance -->
      <!-- datetime -->
      <!-- duration -->
    <speedInterval unit="meters">200</speedInterval>
    <legend>yes</legend>
    <elevation>
      <height>55</height>
      <range>
        <lo></lo>
        <hi></hi>
      </range>
    </elevation>
    <speed>
      <height>15</height>
      <range>
        <lo>4</lo>
        <hi>14</hi>
      </range>
      <average>true</average>
    </speed>
    <hr>
      <height>15</height>
      <range>
        <lo>120</lo>
        <hi>185</hi>
      </range>
      <average>true</average>
      <source>Douglas-Peucker (3m)</source>
    </hr>
    <slope>
      <height>15</height>
      <range>
        <lo>-30</lo>
        <hi>30</hi>
      </range>
      <source>Douglas-Peucker (3m)</source>
    </slope>
  </gnuplot>

  <dump>
    <file>20080710-Fast-Runde-2-korrigiert.dump.txt</file>
  </dump>

</config>
